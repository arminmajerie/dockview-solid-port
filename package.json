{
  "name": "dockview-solid-port",
  "private": true,
  "description": "Monorepo for dockview-solid-port: a modern SolidJS wrapper for Dockview with no React dependency",
  "homepage": "https://github.com/arminmajerie/dockview-solid-port#readme",
  "bugs": {
    "url": "https://github.com/arminmajerie/dockview-solid-port/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arminmajerie/dockview-solid-port.git"
  },
  "license": "MIT",
  "author": "https://github.com/arminmajerie",
  "workspaces": [
    "packages/dockview",
    "packages/dockview-solid",
    "packages/dockview-core",
    "dockview-solid-example"
  ],
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.39.1",
    "gulp": "^5.0.1",
    "gulp-sass": "^6.0.1",
    "lerna": "^8.2.1",
    "rimraf": "^5.0.5",
    "sass": "^1.93.2",
    "solid-js": "^1.8.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typedoc": "^0.28",
    "typescript": "^5.3.3",
    "vite": "^5.1.5",
    "vite-plugin-solid": "^2.11.8"
  },
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build --stream",
    "build:ordered": "npm run build -w packages/dockview-core && npm run build -w packages/dockview && npm run build -w packages/dockview-solid",
    "dev": "lerna run dev --stream",
    "lint": "eslint 'packages/*/src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint 'packages/*/src/**/*.{ts,tsx,js,jsx}' --fix",
    "docs": "typedoc && node scripts/docs.mjs",
    "version": "lerna version",
    "example": "cd packages/dockview-solid-example && npm run server"
  }
}
